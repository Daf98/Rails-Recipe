<%= form_with model: @recipe_foods, url: recipe_recipe_foods_path, method: :post, local: true, scope: :recipe_food do |form| %>
  <div class="form-group">
    <%= form.number_field :food_id, class:"form-control", placeholder:"Food id" %>
  </div>
  <br/>
  <div class="form-group">
    <%= form.number_field :quantity, class:"form-control", placeholder:"Quantity" %>
  </div>
  <div>
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
